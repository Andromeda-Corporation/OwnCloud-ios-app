# This file contains the fastlane.tools configuration

update_fastlane # fastlane automatically update itself

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match
    increment_build_number xcodeproj: "ownCloud.xcodeproj" # automatically increase the build number
    build_app(scheme: "ownCloud")
    changelog_from_git_commits # this will generate the changelog based on last commits
    upload_to_testflight
  end
end
